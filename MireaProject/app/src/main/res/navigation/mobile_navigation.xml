<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="ru.com.hristov.mireaproject.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="ru.com.hristov.mireaproject.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="ru.com.hristov.mireaproject.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_datafragment"
        android:name="ru.com.hristov.mireaproject.ui.data.DataFragment"
        android:label="menu_datafragment"
        tools:layout="@layout/fragment_data" />
    <fragment
        android:id="@+id/nav_webview"
        android:name="ru.com.hristov.mireaproject.ui.webview.WebViewFragment"
        android:label="menu_webviewfragment"
        tools:layout="fragment_webview" />
    <fragment
        android:id="@+id/nav_downloadfragment"
        android:name="ru.com.hristov.mireaproject.DownloadFragment"
        android:label="Download"
        tools:layout="@layout/fragment_download" />

</navigation>